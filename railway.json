{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "./gradlew clean fatJar",
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "startCommand": "java -jar build/libs/ThEconomistDownloader-1.0-SNAPSHOT.jar",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
